// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model for authentication
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  projects  Project[]
  userTodos UserTodo[]

  @@map("users")
}

// Project model
model Project {
  id          String   @id @default(cuid())
  name        String
  cursorKey   String?  // Cursor密钥
  uuid        String   @unique @default(cuid())
  status      String   @default("active") // active, hidden, deleted (逻辑删除)
  description String?
  order       Int?     // 排序字段，用户可拖拽排序
  notificationSound String? // 待办事项提示音文件路径
  ports       Json?    // Allocated ports array: [{port: number, remark: string, allocatedAt: DateTime}]
  // AI execution status fields
  aiStatus    String?  @default("idle") // idle, running, success, failed, warning
  aiCommand   String?  // Current/last AI command executed
  aiResult    String?  // Execution result or error message
  aiDuration  Int?     // Execution time in milliseconds
  aiStartedAt DateTime? // When current AI execution started
  aiCompletedAt DateTime? // When AI execution completed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks     Task[]
  portAllocations PortAllocation[]
  userTodos UserTodo[]

  @@map("projects")
}

// Task model
model Task {
  id        String   @id @default(cuid())
  title     String
  status    String   @default("pending") // pending, in_progress, completed
  priority  Int      @default(3) // 1-5, 1 is highest priority
  order     Int?     // For drag-and-drop ordering
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("tasks")
}

// Port allocation model for tracking allocated ports across projects
model PortAllocation {
  id        String   @id @default(cuid())
  port      Int      @unique // Port number, unique across all projects
  projectId String
  allocatedAt DateTime @default(now())

  // Relations
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("port_allocations")
}

// User Todo model for user tasks after AI execution completion
model UserTodo {
  id          String   @id @default(cuid())
  title       String   // 任务标题
  description String?  // 任务描述
  status      String   @default("pending") // pending, in_progress, completed
  priority    Int      @default(3) // 1-5, 1 is highest priority
  projectId   String?  // 关联的项目ID（可选）
  aiCommand   String?  // 生成此待办任务的AI命令
  aiResult    String?  // AI执行结果
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  project     Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@map("user_todos")
}

